{
  "name": "backend",
  "private": true,
  "version": "0.0.0",
  "devDependencies": {
    "@types/node": "^24.0.10",
    "nvm": "^0.0.4",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "5.8.3"
  },
  "scripts": {
    "dev": "ts-node-dev --rs ./src/index.ts",
    "build": "rimraf ./dist && tsc --build ./tsconfig.json",
    "start": "node ./dist/index.js",
    "prettify": "prettier --loglevel warn --cache --write '{src/**/*,*}.{ts,tsx,js,jsx,json,yml,yaml,scss}' '!**/{node_modules,dist}/**/*'"
  }
}
